@using WebPresentation.Helper
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/Content/bootstrap.min.css" />

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container" align="center">
        <div class="col-md-9">
            <ul class="nav nav-pills">
                <li class="@(ViewBag.MenuItem.Equals(MenuItem.Memory) ? " active" : null)">
                    <a href="@Url.Action("Memory", "Resources" )">Memory</a>
                </li>
                <li class="@(ViewBag.MenuItem.Equals(MenuItem.HardDisk) ? " active": null)">
                    <a href="@Url.Action("HardDiskDrive", "Resources" )">HDD</a>
                </li>
            </ul>
        </div>
        <div class="col-md-1">
            <ul class="nav nav-pills right">
                <li class="btn-default">
                    @Html.ActionLink("Monitoring", "Monitoring", "Resources")
                </li>
            </ul>
            <br />
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
