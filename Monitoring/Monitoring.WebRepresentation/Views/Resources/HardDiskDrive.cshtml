@using Monitoring.Business.HardDiskMonitor

@model IEnumerable<HardDiskState>

@{
    ViewBag.Title = "Hard Disk Statistics";
}

<table class="table table-striped">
    <tr class="text-center">
        <td><b>Id</b></td>
        <td><b>Date</b></td>
        <td><b>Drive name</b></td>
        <td><b>Available free space</b></td>
    </tr>
    @foreach (var hs in Model)
    {
        <tr class="text-center">
            <td>@hs.Id</td>
            <td>@hs.Date</td>
            <td>@hs.Drive.Name</td>
            <td>@hs.AvailableFreeSpace</td>
        </tr>
    }
</table>